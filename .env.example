# Application
FLASK_APP=src.main:create_app
FLASK_ENV=development
SECRET_KEY=your-secret-key-change-in-production
API_VERSION=v1

# Database (use 'db' como host quando rodar via Docker, 'localhost' quando rodar local)
DATABASE_URL=postgresql://postgres:postgres@db:5432/cuidar_plus
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20

# Redis (use 'redis' como host quando rodar via Docker, 'localhost' quando rodar local)
REDIS_URL=redis://redis:6379/0

# JWT
JWT_SECRET_KEY=your-jwt-secret-key-change-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRES=3600
JWT_REFRESH_TOKEN_EXPIRES=2592000

# Email (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=noreply@cuidarplus.com

# SMS (Twilio)
TWILIO_ACCOUNT_SID=your-account-sid
TWILIO_AUTH_TOKEN=your-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# Storage (AWS S3)
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key
AWS_REGION=us-east-1
AWS_BUCKET_NAME=cuidar-plus-uploads

# CORS - Frontend URLs (development)
CORS_ORIGINS=http://localhost:5173,http://localhost:3000,http://localhost:8080,http://127.0.0.1:5173,http://127.0.0.1:3000,http://127.0.0.1:8080

# Logging
LOG_LEVEL=INFO
